@model IEnumerable<StudentPortal.Contracts.Responses.StudentResponse>

<h2>학생 목록</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ 학생 추가</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>이름</th>
            <th>나이</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-secondary">수정</a>
                    <form asp-action="Delete" asp-route-id="@s.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('정말 삭제할까요?');">
                            삭제
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>등록된 학생이 없습니다.</p>
}