@model StudentPortal.Contracts.Requests.StudentCreateRequest
@{
}
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <title>학생 추가</title>
    <meta name="viewport" content="width=1440, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;500;700&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background: #fff;
        }

        .stage {
            position: relative;
            width: 1440px;
            height: 1071px;
            margin: 0 auto;
            background: #fff;
            font-family: 'Inter', system-ui, sans-serif;
            color: #000;
        }

        /* ===== 라벨: 이름 ===== */
        .label-name {
            position: absolute;
            left: 568px;
            top: 318px;
            width: auto;
            height: 44px;
            font-weight: 700;
            font-size: 36px;
            line-height: 44px;
            text-align: center;
            letter-spacing: -0.02em;
        }
        /* ===== 입력: 이름(Rectangle 1) ===== */
        .input-name {
            box-sizing: border-box;
            position: absolute;
            left: 568px;
            top: 371px;
            width: 304px;
            height: 44px;
            background: #FFFFFF;
            border: 1px solid #000000;
            padding: 0 10px;
            font-size: 18px;
            font-weight: 500;
            outline: none;
        }

        /* ===== 라벨: 나이 ===== */
        .label-age {
            position: absolute;
            left: 568px;
            top: 439px;
            width: auto;
            height: 44px;
            font-weight: 700;
            font-size: 36px;
            line-height: 44px;
            text-align: center;
            letter-spacing: -0.02em;
        }
        /* ===== 입력: 나이(Rectangle 2) ===== */
        .input-age {
            box-sizing: border-box;
            position: absolute;
            left: 568px;
            top: 492px;
            width: 304px;
            height: 44px;
            background: #FFFFFF;
            border: 1px solid #000000;
            padding: 0 10px;
            font-size: 18px;
            font-weight: 500;
            outline: none;
        }

        /* ===== 저장 버튼 ===== */
        .btn-save {
            position: absolute;
            left: 763px;
            top: 572px;
            width: 109px;
            height: 76px;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            padding: 20px 32px;
            gap: 8px;
            background: #1491FF;
            box-shadow: 0px 1px 2px rgba(0,0,0,0.05);
            border-radius: 8px;
            border: none;
            color: #fff;
            font-size: 20px;
            font-weight: 700;
            cursor: pointer;
            text-decoration: none;
        }

            .btn-save:disabled {
                opacity: .6;
                cursor: not-allowed;
            }

        /* (선택) 검증 메시지 */
        .validation-summary {
            position: absolute;
            left: 568px;
            top: 270px;
            color: #c00;
        }

        .field-error {
            color: #c00;
            font-size: 12px;
            position: absolute;
            left: 568px;
        }

            .field-error.name {
                top: 420px;
            }

            .field-error.age {
                top: 541px;
            }

    </style>
</head>
<body>
    <div class="stage">

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="label-name">이름</div>
            <input asp-for="Name" class="input-name" autocomplete="off" />

            <div class="label-age">나이</div>
            <input asp-for="Age" class="input-age" type="number" min="1" max="120" />

            <button type="submit" class="btn-save">추가</button>

            <!-- (선택) 서버 검증 요약/필드 에러 표시 -->
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            <span asp-validation-for="Name" class="field-error name"></span>
            <span asp-validation-for="Age" class="field-error age"></span>
        </form>

    </div>
</body>
</html>